{
	"name": "lazy-loading-vrscans-library",
	"private": true,
	"version": "0.0.5",
	"type": "module",
	"description": "React-based load-on-demand library showing VRScans materials from a pre-defined REST API",
	"author": "Iva Tsaneva & Georgi Levov",
